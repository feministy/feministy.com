{
  "name": "feministy.com",
  "version": "1.0.0",
  "description": "my knitting website!",
  "main": "src/scripts/index.js",
  "scripts": {
    "copy:static": "cp -r src/assets/ public/assets/",
    "copy:html": "cp -r src/index.html public/index.html",
    "build": "echo '... building' npm run minify:js -s && npm run build:css",
    "build:js": "browserify src/scripts/index.js -o public/js/index.js",
    "build:css": "node-sass --include-path scss src/scss/main.scss public/css/main.css",
    "build:dev": "npm run build:css & npm run build:js & npm run copy:html",
    "minify:js": "echo '... minify:js' && uglifyjs src/scripts/index.js -o public/js/index.min.js",
    "start": "npm run watch & http-server public/",
    "watch": "nodemon --watch src/ -e scss,js,html -x 'npm run build:dev'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feministy/feministy.com.git"
  },
  "author": "@feministy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/feministy/feministy.com/issues"
  },
  "homepage": "http://feministy.com",
  "devDependencies": {
    "browserify": "^12.0.1",
    "http-server": "^0.8.5",
    "jquery": "^2.1.4",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "uglify-js": "^2.6.1"
  },
  "dependencies": {
    "angular": "^1.4.8",
    "angular-ui-router": "^0.2.15",
    "lodash": "^3.10.1"
  }
}
